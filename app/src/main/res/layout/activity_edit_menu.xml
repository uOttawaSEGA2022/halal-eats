<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6f3"
    tools:context=".EditMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/menu" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Edit menu"
                android:textColor="#638A69"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/mealNameInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Enter meal name" />

            <EditText
                android:id="@+id/mealCuisineInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Enter meal cuisine" />

            <EditText
                android:id="@+id/mealDescInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Enter meal description" />

            <EditText
                android:id="@+id/mealTypeInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Enter meal type" />

            <EditText
                android:id="@+id/priceInput"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Enter price" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add"
                    android:translationX="-10dp"
                    app:backgroundTint="#85ae8b" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Remove"
                    android:translationX="10dp"
                    app:backgroundTint="#85ae8b" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />

            <Button
                android:id="@+id/goHomePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                app:backgroundTint="#85ae8b" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>