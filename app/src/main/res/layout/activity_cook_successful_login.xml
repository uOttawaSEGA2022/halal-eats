<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6f3"
    tools:context=".CookSuccessfulLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cookimg" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You are signed in as a Cook!"
            android:textColor="#2C2C2C"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/viewprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view your profile"
                android:textSize="15sp"
                app:backgroundTint="#85ae8b" />

            <Button
                android:id="@+id/vieworders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view order requests"
                android:textSize="15sp"
                app:backgroundTint="#85ae8b" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit  Menu"
                android:textSize="15sp"
                app:backgroundTint="#85ae8b" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Offered Menu"
                android:textSize="15sp"
                app:backgroundTint="#85ae8b" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Off"
                android:textSize="15sp"
                app:backgroundTint="#85ae8b" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>