<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/ClientImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/eat"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#a799b7"
        android:text="Next"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/ClientRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="415dp" />

    <TextView
        android:id="@+id/ChooseUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a role:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="260dp" />

    <TextView
        android:id="@+id/CookRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cook"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="415dp" />

    <ImageView
        android:id="@+id/CookImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cooking"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/WelomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Mealer App!"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="228dp" />

</androidx.constraintlayout.widget.ConstraintLayout>