<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailUserRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwordUserRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonUserRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="register" />

        <Button
            android:id="@+id/backToMainUserReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to main" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOU ARE REGISTERING AS A USER" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>